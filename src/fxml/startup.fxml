<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="anchorPane" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StartupController">
   <children>
      <VBox alignment="CENTER" layoutX="69.0" layoutY="-13.0" prefHeight="300.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" text="Gmail Sorter" textAlignment="CENTER">
               <font>
                  <Font name="Roboto Light" size="66.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
      
                         <Text text="Choose a Gmail account:">
               <font>
                  <Font name="Roboto Regular" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </Text>
      
                         <ComboBox fx:id="accountDropdown">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </ComboBox>
             <Text fx:id="newAccountText" fill="mediumblue" onMouseClicked="#makeNewAccount" text="Or add new account" underline="true">
               <font>
                  <Font name="Roboto Regular" size="17.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
             <Text fx:id="browserWillOpenText" text="(a new browser tab/window will open)">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Text>
             <Label fx:id="warningText" text="WARNING: do not close browser tab if you want to cancel." textFill="firebrick" visible="true" wrapText="true">
               <font>
                  <Font name="Roboto Regular" size="12.0" />
               </font>
            </Label>
            <Label fx:id="warningText1" text="Click on an account and then click cancel" textFill="firebrick" visible="true" wrapText="true">
               <font>
                  <Font name="Roboto Regular" size="12.0" />
               </font>
            </Label>
             <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" text="Login">
               <VBox.margin>
                  <Insets left="400.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Roboto Medium" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
