<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InitializePreferencesController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <CheckBox fx:id="deleteCheckBox" mnemonicParsing="false" text="Delete emails after saving to hard drive" />
      <CheckBox fx:id="readCheckBox" mnemonicParsing="false" text="Only save (and possibly delete) read emails" GridPane.rowIndex="1" />
      <CheckBox fx:id="inCheckBox" mnemonicParsing="false" text="Save all incoming emails" GridPane.rowIndex="2" />
      <CheckBox fx:id="outCheckBox" mnemonicParsing="false" text="Save all outgoing emails" GridPane.rowIndex="3" />
      <CheckBox fx:id="separateCheckBox" mnemonicParsing="false" text="Save incoming and outgoing emails in separate folders " GridPane.rowIndex="4" />
      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onMouseClicked="#savePreferences" text="Next" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      
   </children>

</GridPane>
